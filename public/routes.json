{
    "routes": [
        {
            "route": "/",
            "serve": "/index.html"
        },
        {
            "route": "/login",
            "serve": "/.auth/login/aad"
        },
        {
            "route": "/devices",
            "serve": "/index.html",
            "allowedRoles": [
                "reader"
            ]
        },
        {
            "route": "/devices/*",
            "serve": "/index.html",
            "allowedRoles": [
                "reader"
            ]
        },
        {
            "route": "/.auth/login/twitter",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/google",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/facebook",
            "statusCode": 404
        },
        {
            "route": "/.auth/login/github",
            "statusCode": 404
        },
        {
            "route": "/*",
            "serve": "/index.html",
            "statusCode": 200
        }
    ],
    "platformErrorOverrides": [
        {
            "errorType": "Unauthenticated",
            "serve": "/login"
        },
        {
            "errorType": "Unauthorized_MissingRoles",
            "serve": "/login"
        }
    ]
}